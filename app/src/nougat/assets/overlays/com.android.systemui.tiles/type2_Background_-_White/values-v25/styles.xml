<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- QuickSettings -->
    <style name="systemui_theme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:textColorPrimary">#de000000</item>
        <item name="android:colorControlNormal">#de000000</item>
        <item name="android:progressBackgroundTint">#de000000</item>
        <item name="android:colorPrimary">#FFF</item>
    </style>

    <!-- DND -->
    <style name="TextAppearance.Volume.ZenDetail" parent="@*com.android.systemui:style/TextAppearance">                   <!-- DND description -->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#66757575</item>
    </style>
    <style name="TextAppearance.Volume.ZenSummary" parent="@*com.android.systemui:style/TextAppearance">              <!--DND title -->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@*android:color/accent_material_light</item>
    </style>

    <!-- Volume Icons -->
    <style name="VolumeButtons" parent="@*android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@*com.android.systemui:drawable/btn_borderless_rect</item>
        <item name="android:tint">#de000000</item>
    </style>


    <!-- QuickSettings time & date text  -->
    <style name="TextAppearance.StatusBar.Expanded.Clock" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.Date" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.AboveDateTime" parent="@*com.android.systemui:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <!-- OmniJaws -->
    <style name="TextAppearance.StatusBar.Expanded.Weather" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textColorSecondary">#80000000</item>
        <item name="android:titleTextColor">#de000000</item>
        <item name="android:textColorPrimary">#de000000</item>
    </style>
</resources>